<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:id="@+id/acp_player_section"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:padding="8dp"
		android:background="@color/colorPrimary"
		android:orientation="vertical">

		<fitness.classmate.view.PlayerProgressSectionView
			android:id="@+id/player_progress_view"
			android:layout_width="match_parent"
			android:layout_height="56dp"/>

		<fitness.classmate.view.PlayerControlsView
			android:id="@+id/player_controls_view"
			android:layout_width="match_parent"
			android:layout_height="48dp"/>

	</LinearLayout>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/acp_recycler_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@id/acp_player_section"
		android:background="@color/player_note_list_background_color"/>

</RelativeLayout>